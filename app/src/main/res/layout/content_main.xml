            android:layout_margin="0dp"
            android:padding="0dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@+id/sdfsdfsdfsdf"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_thin"
                    android:text="2,458,912"
                    android:textAlignment="center"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="400dp"
                    android:layout_height="90dp"
                    android:alpha="50"
                    android:tint="#666"
                    app:srcCompat="@drawable/ic_folder_shared_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="sans-serif"
                    android:text="Total Beneficiarios"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/sdfsdfsdfsdf"
            android:layout_width="400dp"
            android:layout_height="170dp"
            android:padding="0dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_thin"
                    android:text="$ 450,387,932.00 MX"
                    android:textAlignment="center"
                    android:textSize="30sp" />


                <ImageView
                    android:id="@+id/imageView4"
